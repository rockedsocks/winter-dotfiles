# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#c9ffff"          # Main text color
theme[title]="#c9ffff"            # Title color for boxes
theme[hi_fg]="#56649b"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#1d1132"       # Color of inactive/disabled text
theme[graph_text]="#628bc3"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#08050D"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#4e6f9b"       # Background color of selected item in processes box
theme[selected_fg]="#98d0d8"       # Foreground color of selected item in processes box
theme[proc_misc]="#628bc3"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#4C536E"           # Cpu box outline color
theme[mem_box]="#8D6962"           # Memory/disks box outline color
theme[net_box]="#4C536E"           # Net up/down box outline color
theme[proc_box]="#8D6962"          # Processes box outline color
theme[div_line]="#8D6962"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#1d1132"          # Background color of the percentage meters
theme[used_start]="#576D8B"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#628bc3"
theme[available_start]="#638EAB"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#6fbcef"
theme[cached_start]="#576D8B"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#628bc3"
theme[free_start]="#638EAB"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#6fbcef"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#56649b"        # CPU graph colors
theme[cpu_mid]="#5d6691"
theme[cpu_end]="#c67e6f"
theme[download_start]="#576D8B"    # Download graph colors
theme[download_mid]="#8D6962"
theme[download_end]="#c67e6f"  
theme[upload_start]="#5d6691"     # Upload graph colors
theme[upload_mid]="#515567"
theme[upload_end]="#638EAB"
theme[process_start]="#628bc3"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#6fbcef"
theme[process_end]="#06658C"